<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Dashboard DENUE - Panel Fijo</title>

  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.css"/>
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.Default.css"/>
  <script src="https://unpkg.com/leaflet.markercluster@1.5.3/dist/leaflet.markercluster.js"></script>
  <script src="https://unpkg.com/leaflet.heat@0.2.0/dist/leaflet-heat.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <style>
    body { margin:0; padding:0; font-family: Arial, Helvetica, sans-serif; background:#f5f7fa; }
    #sidebar {
      position: fixed; left: 0; top: 0; width: 350px; height: 100%; background: white;
      padding: 20px; overflow-y: auto; box-shadow: 2px 0 5px rgba(0,0,0,0.1); z-index: 1000;
    }
    #map {
      position: absolute; left: 350px; top: 0; right: 0; bottom: 0; height: 100vh;
      width: calc(100% - 350px); z-index: 1;
    }
    .filter-section { margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 15px; }
    .category-list { max-height: 200px; overflow-y: auto; }
    /* Estilo para los clusters de marcadores */
    .leaflet-marker-icon.cluster-custom {
      background-color: #2788c0; color: white; border-radius: 50%; text-align: center;
      line-height: 40px; width: 40px; height: 40px; font-weight: bold; border: 2px solid white;
    }
  </style>
</head>
<body>

<div id="sidebar">
  <h4 class="mb-4">Dashboard DENUE</h4>

  <div class="filter-section">
    <h6>Estado</h6>
    <select id="selEstado" class="form-select"></select>
  </div>

  <div class="filter-section">
    <h6>Municipio</h6>
    <select id="selMunicipio" class="form-select"></select>
  </div>

  <div class="filter-section">
    <h6>Categor칤a</h6>
    <div id="categoriaCheckboxes" class="category-list">
      </div>
  </div>

  <div class="d-grid gap-2">
    <button id="btnExport" class="btn btn-success">Exportar a CSV</button>
  </div>
</div>

<div id="map"></div>

<script>
  let features = [];
  let map, markers, heat;
  let allStates = [], allMunicipios = new Map(), allCategories = new Map();
  const selEstado = document.getElementById("selEstado");
  const selMunicipio = document.getElementById("selMunicipio");
  const categoriaCheckboxes = document.getElementById("categoriaCheckboxes");

  function escapeCSVField(field) {
      if (field === null || field === undefined) return '';
      let str = String(field).replace(/\\n/g, ' ').replace(/\\r/g, '');
      if (str.includes(',') || str.includes('"') || str.includes('\\n')) {
          return '"' + str.replace(/"/g, '""') + '"';
      }
      return str;
  }

  // ============== FUNCI칍N CLAVE: CARGA AS칈NCRONA DE DATOS EXTERNOS ===================
  // URL de descarga directa de tu archivo JSON en Google Drive
  const DATA_URL = 'https://drive.google.com/uc?export=download&id=1bmsTFc33kDyQ78mDlzf4QPuvzBtm8rVO'; 

  async function loadDataAndInitialize() {
    try {
      // 1. Cargar el JSON desde la URL externa
      const response = await fetch(DATA_URL);
      if (!response.ok) {
        throw new Error(`Error al cargar los datos: ${response.statusText}`);
      }
      const data = await response.json();
      
      // Asignar los datos cargados a la variable 'features'
      features = data;

      // 2. Inicializar el dashboard una vez que los datos est치n listos
      initializeDashboard();

    } catch (error) {
      console.error('Error fatal al inicializar el dashboard:', error);
      document.getElementById('map').innerHTML = `<h2 style="padding: 20px; text-align: center;">Error de Carga 游땩</h2>
        <p style="padding: 0 20px; text-align: center;">No se pudo cargar el archivo JSON. 
        Esto puede deberse a la configuraci칩n de uso compartido de Google Drive o un bloqueo de CORS.</p>`;
    }
  }
  
  function initializeDashboard() {
      map = L.map('map').setView([19.4326, -99.1332], 5);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          maxZoom: 19, attribution: '춸 OpenStreetMap'
      }).addTo(map);

      // Inicializaci칩n de capas (Markers y Heatmap)
      markers = L.markerClusterGroup({
        iconCreateFunction: function(cluster) {
            return L.divIcon({ html: '<div><span>' + cluster.getChildCount() + '</span></div>', className: 'cluster-custom', iconSize: new L.Point(40, 40) });
        }
      });
      heat = L.heatLayer([], { radius: 25, maxZoom: 14 });

      // Pre-procesamiento y Filtros
      features.forEach(function(d) {
          if (!allStates.includes(d.estado)) allStates.push(d.estado);
          if (!allCategories.has(d.categoria)) allCategories.set(d.categoria, 0);
          allCategories.set(d.categoria, allCategories.get(d.categoria) + 1);

          if (!allMunicipios.has(d.estado)) allMunicipios.set(d.estado, new Set());
          allMunicipios.get(d.estado).add(d.municipio);
      });

      // Llenar selector de Estado
      allStates.sort();
      selEstado.innerHTML = '<option value="Todos">Todos los Estados (' + features.length + ')</option>' +
          allStates.map(s => '<option value="' + s + '">' + s + '</option>').join('');
      
      // Llenar selector de Municipio
      function populateMunicipios(estado) {
          selMunicipio.innerHTML = '<option value="Todos">Todos los Municipios</option>';
          if (estado !== "Todos" && allMunicipios.has(estado)) {
              Array.from(allMunicipios.get(estado)).sort().forEach(m => {
                  selMunicipio.innerHTML += '<option value="' + m + '">' + m + '</option>';
              });
          }
      }
      populateMunicipios("Todos");

      // Generar Checkboxes de Categor칤as
      const sortedCategories = Array.from(allCategories.entries()).sort((a, b) => b[1] - a[1]);
      categoriaCheckboxes.innerHTML = sortedCategories.map(([cat, count]) => `
          <div class="form-check">
            <input class="form-check-input cat-checkbox" type="checkbox" value="${cat}" id="check-${cat.replace(/\s/g, '_')}">
            <label class="form-check-label" for="check-${cat.replace(/\s/g, '_')}">
              ${cat} (${count})
            </label>
          </div>
      `).join('');


      // Funci칩n de Dibujo
      window.drawFiltered = function() {
          markers.clearLayers();
          heat.setLatLngs([]);

          const estado = selEstado.value;
          const municipio = selMunicipio.value;
          const checkedCats = Array.from(document.querySelectorAll(".cat-checkbox:checked")).map(n => n.value);

          const filtered = features.filter(function(d){
              if(estado !== "Todos" && d.estado !== estado) return false;
              if(municipio !== "Todos" && d.municipio !== municipio) return false;
              if(checkedCats.length > 0 && checkedCats.indexOf(d.categoria) === -1) return false;
              return true;
          });

          const heatPoints = [];
          filtered.forEach(function(d){
              const marker = L.marker([d.latitud, d.longitud], { title: d.nombre_establecimiento });
              marker.bindPopup(`<h6>${d.nombre_establecimiento}</h6><p><strong>Actividad:</strong> ${d.actividad}</p><p><strong>Categor칤a:</strong> ${d.categoria}</p><p><strong>Ubicaci칩n:</strong> ${d.municipio}, ${d.estado}</p>`);
              markers.addLayer(marker);
              heatPoints.push([d.latitud, d.longitud]);
          });

          map.addLayer(markers);
          
          if (filtered.length > 0) {
            try {
              map.fitBounds(markers.getBounds());
            } catch (e) {
              map.setView([filtered[0].latitud, filtered[0].longitud], 10);
            }
          } else {
            map.setView([19.4326, -99.1332], 5);
          }
      };

      // Eventos
      selEstado.addEventListener("change", function(){ populateMunicipios(this.value); drawFiltered(); });
      selMunicipio.addEventListener("change", drawFiltered);
      categoriaCheckboxes.addEventListener("change", function(e){ if (e.target.classList.contains('cat-checkbox')) drawFiltered(); });

      // Exportar CSV
      document.getElementById("btnExport").addEventListener("click", function(){
        const estado = selEstado.value;
        const municipio = selMunicipio.value;
        const checkedCats = Array.from(document.querySelectorAll(".cat-checkbox:checked")).map(n => n.value);
        const filtered = features.filter(function(d){
          if(estado !== "Todos" && d.estado !== estado) return false;
          if(municipio !== "Todos" && d.municipio !== municipio) return false;
          if(checkedCats.length > 0 && checkedCats.indexOf(d.categoria) === -1) return false;
          return true;
        });
        if(filtered.length===0) { alert("No hay registros para exportar."); return; }
        const header = ["nombre_establecimiento","actividad","estado","municipio","categoria","latitud","longitud"];
        const csvRows = [header.join(",")].concat(filtered.map(function(r){
          return header.map(function(h){ return escapeCSVField(r[h]); }).join(",");
        }));
        const csvString = csvRows.join("\\n");
        const blob = new Blob([csvString], {type: "text/csv;charset=utf-8;"});
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "denue_filtrado.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
      });
      
      drawFiltered();
  }

  // Iniciar la carga de datos y el dashboard
  loadDataAndInitialize();
</script>

</body>
</html>
